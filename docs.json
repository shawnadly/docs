{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "SparkDoc",
  "colors": {
    "primary": "#45BD5F",
    "light": "#ACD6B5",
    "dark": "#3DA955"
  },
  "icons": { "library": "lucide" },

  "navigation": {
    "global": {
      "anchors": [
        { "anchor": "Open SparkDoc", "href": "https://www.sparkdoc.com", "icon": "rocket" },
