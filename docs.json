        { "anchor": "Contact us", "href": "mailto:support@sparkdoc.com", "icon": "mail" }
      ]
    },
    "groups": [
      {
        "group": "New User Guide",
        "icon": "lightbulb",
        "pages": [
          "index",
          "new-user/key-elements",
          "new-user/quick-start"
        ]
      },
      {
        "group": "Editor Basics",
        "icon": "book-open",
        "pages": [
          "editor-basics/layout-and-navigation",
          "editor-basics/document-tools",
          "editor-basics/keyboard-shortcuts"
        ]
      },
      {
        "group": "Writing with AI",
        "icon": "sparkles",
        "pages": [
          "writing/autocomplete",
          "writing/use-AI"
        ]
      },
      {
        "group": "Citations & References",
        "icon": "quote",
        "pages": [
          "citations/add-in-text",
          "citations/search-and-filters",
          "citations/custom-citation",
          "styles",
          "styles",
          "citations/references"
        ]
      },
      {
        "group": "Managing Documents",
        "icon": "folder",
        "pages": [
          "managing/autosave",
          "managing/rename-and-find",
          "managing/share",
          "managing/export"
        ]
      },
      {
        "group": "Troubleshooting & FAQ",
        "icon": "life-buoy",
        "pages": [
          "troubleshooting/autocomplete",
          "troubleshooting/citations",
          "troubleshooting/export",
          "troubleshooting/shortcuts"
        ]
      },
      {
        "group": "Release Notes",
        "icon": "megaphone",
        "pages": [
          "release-notes/whats-new",
          "release-notes/known-limitations"
        ]
      },
      {
        "group": "Help & Community",
        "icon": "users",
        "pages": [
          "help/feedback-&-feature-requests",
          "help/follow-us"
        ]
      },
      {
        "group": "Legal & Security",
        "icon": "shield-check",
        "pages": [
          "legal/privacy-policy",
          "legal/terms-of-service"
        ]
      }
    ]
