  "logo": {
    "light": "/logo/logo-light-png.png",
    "dark": "/logo/logo-dark-png.png",
    "href": "https://docs.sparkdoc.com/"
  },

  "favicon": {
    "light": "/logo/fav-png.png",
    "dark": "/logo/fav-png.png"
  },

  "navbar": {
    "links": [
      { "label": "Support", "href": "mailto:support@sparkdoc.com" }
    ],
    "primary": {
      "type": "button",
      "label": "Open SparkDoc",
